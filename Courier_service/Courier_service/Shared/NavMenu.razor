<MudNavMenu>

	<AuthorizeView Roles="Client">
		<Authorized>
			<MudText Typo="Typo.h6" Class="px-4 mt-2">Меню клиента</MudText>
			<MudDivider Class="my-2" />
			<MudNavGroup Title="Заказы" Expanded="false">
				<MudNavLink Icon="@Icons.Filled.List" Href="orderslist">Список заказов</MudNavLink>
				<MudNavLink Icon="@Icons.Filled.Create" Href="neworder">Новый заказ</MudNavLink>
			</MudNavGroup>
			<MudNavLink Icon="@Icons.Filled.Settings" Href="Identity/Account/Manage">Настройки клиента</MudNavLink>
		</Authorized>
	</AuthorizeView>

	<AuthorizeView Roles="Courier">
		<Authorized>
			<MudText Typo="Typo.h6" Class="px-4  mt-2">Меню курьера</MudText>
			<MudDivider Class="my-2" />
			<MudNavLink Icon="@Icons.Filled.Work" Href="courierorders">Заказы</MudNavLink>
		</Authorized>
	</AuthorizeView>

	<AuthorizeView>
		<NotAuthorized>
			<MudText Typo="Typo.h6" Class="px-4  mt-2">Меню пользователя</MudText>
			<MudDivider Class="my-2" />
			<MudText>Сначала введите контактные данные!</MudText>
			<MudNavLink Icon="@Icons.Filled.Settings" Href="Identity/Account/Manage">Настройки клиента</MudNavLink>
		</NotAuthorized>
	</AuthorizeView>

</MudNavMenu>

@code{
	[CascadingParameter]
	public bool downloading { get; set; }

	public void SetDownloading() => downloading = true;
}