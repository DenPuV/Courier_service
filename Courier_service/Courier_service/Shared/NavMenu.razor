<MudNavMenu>

	<AuthorizeView Roles="Client">
		<Authorized>
			<MudText Typo="Typo.h4" Class="px-4">Client menu</MudText>
			<MudDivider Class="my-2" />
			<MudNavGroup Title="Orders" Expanded="false">
				<MudNavLink Icon="@Icons.Filled.List" Href="orderslist">Orders list</MudNavLink>
				<MudNavLink Icon="@Icons.Filled.Create" Href="neworder">New order</MudNavLink>
			</MudNavGroup>
			<MudNavLink Icon="@Icons.Filled.Settings" Href="Identity/Account/Manage">Client settings</MudNavLink>
		</Authorized>
	</AuthorizeView>

	<AuthorizeView Roles="Courier">
		<Authorized>
			<MudText Typo="Typo.h4" Class="px-4">Courier menu</MudText>
			<MudDivider Class="my-2" />
			<MudNavLink Href="courierorders">Orders</MudNavLink>
		</Authorized>
	</AuthorizeView>

	<AuthorizeView>
		<NotAuthorized>
			<MudText Typo="Typo.h4" Class="px-4">User menu</MudText>
			<MudDivider Class="my-2" />
			<MudText>Enter all client data first!</MudText>
			<MudNavLink Icon="@Icons.Filled.Settings" Href="Identity/Account/Manage">Client settings</MudNavLink>
		</NotAuthorized>
	</AuthorizeView>

</MudNavMenu>

@code{
	[CascadingParameter]
	public bool downloading { get; set; }

	public void SetDownloading() => downloading = true;
}